{
  "extends": ["stylelint-config-standard"],
  "ignoreFiles": ["**/node_modules/**", "**/.next/**", "**/coverage/**"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "config",
          "theme",
          "utility"
        ]
      }
    ],
    "import-notation": "string",
    "rule-empty-line-before": null
  }
}
